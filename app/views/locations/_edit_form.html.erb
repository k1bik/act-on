<turbo-frame id="location-address">
  <%= form_with url: location_path(location),
    model: location,
    method: :patch,
    class: "flex gap-2",
    html: {novalidate: true} do |f|
  %>
    <%= render ViewComponents::TextInput.new(
      f, :address,
      placeholder: "Введите адрес",
      classes: "w-1/3"
    ) %>

    <%= f.submit "Обновить", class: "btn blue" %>
    <%= link_to "Отмена", cancel_editing_location_path(location), class: "btn gray", data: { turbo_stream: true } %>
  <% end %>
</turbo-frame>
