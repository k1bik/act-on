<div
  class="transition transform duration-1000 hidden fixed top-5 left-1/2 -translate-x-1/2 z-50"
  data-controller="notification"
  data-notification-delay-value="5000"
  data-transition-enter-from="opacity-0 translate-y-[-1rem]"
  data-transition-enter-to="opacity-100 translate-y-0"
  data-transition-leave-from="opacity-100 translate-y-0"
  data-transition-leave-to="opacity-0 translate-y-[-1rem]"
>
  <% flash.each do |type, message| %>
    <div class="flex items-center gap-4 <%= type == "notice" ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700" %> p-4 rounded-lg shadow-lg max-w-[450px]">
      <p class="text-sm flex-1"><%= message %></p>
      <%= inline_svg_tag "x-mark.svg", class: "cursor-pointer size-6 flex-shrink-0", data: { action: "click->notification#hide"} %>
    </div>
  <% end %>
</div>
