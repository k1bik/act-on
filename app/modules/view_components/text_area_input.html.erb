<div class="form-field <%= @classes %> <%= "error-input" if errors.present? %>">
  <div class="flex items-center gap-1">
    <%= @form_object.label @field_name, @label %>
    <% if required? %>
      <span class="text-red-500 text-sm">*</span>
    <% end %>
  </div>

  <%= @form_object.text_area @field_name, placeholder: @placeholder, maxlength: max_length, **@input_html %>

  <%= render ViewComponents::ErrorMessage.new(errors) if errors.present? %>
</div>
